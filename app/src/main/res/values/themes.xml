<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verd</item>
        <item name="colorPrimaryVariant">@color/verd_obscur</item>
        <item name="colorOnPrimary">@color/claretP</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/roig_claret</item>
        <item name="colorSecondaryVariant">@color/roig_mig</item>
        <item name="colorOnSecondary">@color/roig_obscur</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SplashTheme" parent="Theme.TeamManager">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>



</resources>